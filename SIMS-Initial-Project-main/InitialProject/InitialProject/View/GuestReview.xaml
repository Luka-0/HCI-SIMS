      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InitialProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="990"
      Title="GuestReview">

    <Grid Margin="-41,10,-41,-143">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ExpiredReservations" HorizontalAlignment="Left" Height="199" Margin="136,69,0,0" VerticalAlignment="Top" Width="878" d:ItemsSource="{d:SampleData ItemCount=10}" FontSize="22"/>
