<Window x:Class="InitialProject.View.EditReservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="EditReservation" Height="720" Width="1280">
    <Grid>
        <DataGrid x:Name="ReservationsGrid" ItemsSource="{Binding reservationsToShow}" Height="Auto" Width="Auto" Margin="815,10,10,0" VerticalAlignment="Top" 
                  AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Accommodation.Title}"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Accommodation.Type}"/>
                <DataGridTextColumn Header="Guest Number" Binding="{Binding GuestNumber}"/>
                <DataGridTextColumn Header="City" Binding="{Binding Accommodation.Location.City}"/>
                <DataGridTextColumn Header="Starting Date" Binding="{Binding BegginingDate}"/>
                <DataGridTextColumn Header="Ending Date" Binding="{Binding EndingDate}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
