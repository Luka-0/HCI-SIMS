<Window x:Class="InitialProject.Windows.MainTouristWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.Windows"
        xmlns:viewModel="clr-namespace:InitialProject.ViewModel"
        xmlns:views="clr-namespace:InitialProject.View.Tourist"
        mc:Ignorable="d"
        Title="MainTouristWindow" Height="750" Width="430">
    
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:TouristHomeViewModel}">
            <views:TouristHomeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ShowAndSearchTourViewModel}">
            <views:ShowAndSearchTourView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:TourRequestViewModel}">
            <views:TourRequestView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:NavigationViewModel}">
            <views:NavigationView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ShowTourRequestViewModel}">
            <views:ShowTourRequestView/>
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
